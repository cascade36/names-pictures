{
  "name": "children-newspaper-api",
  "version": "1.0.0",
  "description": "儿童识字小报生成API服务 - 基于Kie.ai实现的识字教育内容生成工具",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=30000",
    "test:watch": "jest --watch --testTimeout=30000",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docker:build": "docker build -t children-newspaper-api .",
    "docker:run": "docker run -p 3000:3000 --env-file ./.env children-newspaper-api"
  },
  "keywords": [
    "api",
    "education",
    "ai",
    "children",
    "newspaper",
    "kie-ai",
    "chinese-learning"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "redis": "^4.6.10",
    "mongoose": "^8.0.0",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/test/**"
    ]
  }
}