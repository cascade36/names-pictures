# 环境变量配置文件
# 请复制此文件为 .env 并填入实际值

# Kie.ai API密钥
KIE_API_KEY=your_kie_ai_api_key_here

# 服务器配置
PORT=3000
NODE_ENV=development

# 允许的跨域来源（多个用逗号分隔）
# 本地开发常用端口：前端 8000/5173，后端 3000
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Redis配置（用于任务缓存）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# 数据库配置（MongoDB）
MONGODB_URI=mongodb://localhost:27017/newspaper
MONGODB_USERNAME=
MONGODB_PASSWORD=

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 文件存储配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 安全配置
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
